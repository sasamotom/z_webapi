    .apiContainer_inner
      .fixedContainer
        h3.apiContainer_ttl Wikipedia API
        .inputArea
          label(for="wikiTxt") KEYWORD
          .row
            input#wikiTxt(type="text")
            button#wikiBtn.btn.-reversal(type="button"): span.btn_txt SEARCH
